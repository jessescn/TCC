{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "lib": [
      "es2016",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "jest.config.js",
    "jest.setup.js"
  ]
}
