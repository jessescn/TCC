{
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    ".sequelizerc",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  }
}
