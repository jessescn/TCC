{
  "include": [
    "./src/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
  }
}
