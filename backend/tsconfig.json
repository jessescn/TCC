{
  "include": [
    "src/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
